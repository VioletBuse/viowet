{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "main",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "assets": ["bin/*"],
    "tokenRef": "GITHUB_TOKEN_RELEASE_IT",
    "autoGenerate": true,
    "comments": {
      "submit": true
    }
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "rm -rf dist && rm -rf bin && npm run build && npx puppeteer browsers install && npm run package"
  }
}
